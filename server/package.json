{
  "name": "node-express-mongodb",
  "version": "1.0.0",
  "description": "Node.js Restful CRUD API with Node.js, Express and MongoDB",
  "main": "server.js",
  "scripts": {
    "client": "cd ../client; npm run start",
    "start": "NODE_ENV=development vite-node server.ts",
    "server": "NODE_ENV=development vite-node server.ts",
    "installClient": "cd ../client; npm install",
    "installServer": "npm install",
    "install_all": "npm run installClient; npm run installServer",
    "buildClient": "cd ../client; npm run build",
    "dev": "npm run install_all; concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "build": "npm run install_all; npm run buildClient",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "express",
    "rest",
    "api",
    "mongodb"
  ],
  "author": "bezkoder",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mime-types": "^2.1.4",
    "@types/serve-index": "^1.9.4",
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-and-time": "^2.4.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mail": "file:../packages/mail",
    "mime-types": "^2.1.35",
    "mongoose": "^6.4.2",
    "serve-index": "^1.9.1",
    "typescript": "^5.5.3",
    "validator": "file:../packages/validator",
    "vite": "^5.3.4",
    "vite-node": "^2.0.4",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "type": "module"
}
